<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">  
         
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  	<servlet>
		<servlet-name>Controller</servlet-name>
		<servlet-class>by.htp.ex.controller.FrontController</servlet-class>

		<multipart-config>
			<location></location>
		</multipart-config>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Controller</servlet-name>
		<url-pattern>/controller</url-pattern>
	</servlet-mapping>

	<error-page>
		<exception-type>java.lang.RuntimeException</exception-type>
		<location>/error/error.jsp</location>
	</error-page>
	
	<listener>
		<listener-class>by.htp.ex.controller.listeners.SessionListener</listener-class>
	</listener>

	<listener>
		<listener-class>by.htp.ex.controller.listeners.ContextListener</listener-class>
	</listener>

	<filter>
		<filter-name>Encoding</filter-name>
		<filter-class>by.htp.ex.controller.filters.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Encoding</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>

	<filter>
		<filter-name>Error</filter-name>
		<filter-class>by.htp.ex.controller.filters.ErrorFilter</filter-class>
		<init-param>
			<param-name>commandPattern</param-name>
			<param-value>.+_e.*</param-value>
		</init-param>
		<init-param>
			<param-name>errorPattern</param-name>
			<param-value>error_.*</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Error</filter-name>
		<servlet-name>Controller</servlet-name>
	</filter-mapping>

</web-app>